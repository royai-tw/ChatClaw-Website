{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "!(sitemap.xml|robots.txt|*.png|*.jpg|*.ico|*.xml|*.txt)",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "sitemap.xml",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/xml"
          }
        ]
      }
    ]
  }
}
